{
    "name": "crukorg/cruk-event-sdk",
    "version": "2.0.6",
    "license": "proprietary",
    "type": "library",
    "description": "CRUK Event Web Services SDK",
    "authors": [
        {
            "name": "David Collard",
            "email": "david.collard@cancer.org.uk"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://crukorg.github.io/cruk-php-packages"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR2 src/ test/",
        "upload-coverage": "codacycoverage phpunit coverage --git-commit=$(git rev-parse HEAD)"
    },
    "require": {
        "monolog/monolog": "^1.19",
        "ramsey/uuid": "^3.3",
        "kelvinmo/simplejwt": "^0.1.4",
        "roave/security-advisories": "dev-master",
        "cruk/microservice-bundle": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "squizlabs/PHP_CodeSniffer": "^2.3",
        "codacy/coverage": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Cruk\\EventSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cruk\\EventSdk\\Test\\": "test/"
        }
    }
}
